<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextField?>
<AnchorPane maxHeight="400.0" minHeight="400.0"
            xmlns:fx="http://javafx.com/fxml" fx:controller="sample.Controller">
    <children>
        <VBox alignment="CENTER" layoutX="91.0" layoutY="85.0" spacing="10.0" AnchorPane.bottomAnchor="30.0"
              AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
            <TextField fx:id="textField" prefWidth="400" onAction="#Send"/>
            <TextArea fx:id="textArea" prefHeight="300.0" prefWidth="400.0"/>
            <Button mnemonicParsing="false" onAction="#Send" text="Send"/>
            <Button fx:id="clear" text="Clear" onAction="#Clear"/>


        </VBox>
    </children>
</AnchorPane>